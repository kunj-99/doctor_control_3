<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:layout_marginHorizontal="6dp"
    android:backgroundTint="#FAFAFA"
    android:elevation="7dp"
    android:background="@drawable/bg_bottomsheet_card"
    android:radius="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottomsheet_card"
        android:padding="18dp">

        <!-- Patient Name (Prominent) -->
        <TextView
            android:id="@+id/tvPatientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient: John Doe"
            android:textStyle="bold"
            android:textColor="#1B1B1B"
            android:textSize="18sp"
            android:paddingBottom="6dp"/>

        <!-- Row: Amount -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_money"
                android:tint="#2979FF"
                android:contentDescription="Amount"/>
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹950.00"
                android:textColor="#2979FF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <!-- Row: Status Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_payment_status"
                android:tint="#FF9800"
                android:contentDescription="Status"/>
            <TextView
                android:id="@+id/tvPaymentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:textStyle="bold"
                android:background="@drawable/bg_status_badge"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <!-- Row: Created At -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_time"
                android:tint="#B0BEC5"
                android:contentDescription="Created At"/>
            <TextView
                android:id="@+id/tvCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created: 2025-05-06 01:44:56"
                android:textColor="#757575"
                android:textSize="14sp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
