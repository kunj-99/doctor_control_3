<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/bg_header_gradient"
            android:elevation="8dp"
            android:paddingBottom="60dp">

            <!-- Profile Container -->
            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:elevation="12dp"
                android:background="@drawable/bg_circle_gradient">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_circle_white"
                    android:scaleType="centerCrop"
                    android:alpha="0.95"/>

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pr_ic_profile_placeholder"
                    android:background="@drawable/bg_round_stroke"
                    android:clipToOutline="true"
                    android:elevation="14dp"
                    android:contentDescription="Doctor Profile"
                    android:clickable="false"
                    android:focusable="false"/>
            </FrameLayout>
        </RelativeLayout>

        <!-- Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@android:color/white"
            android:stateListAnimator="@animator/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="20dp">

                <!-- Row: Full Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person"
                        app:tint="@color/navy_blue"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Full Name"
                            android:textColor="@color/textSecondary"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/et_full_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Not available"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"

                            android:paddingTop="2dp"
                            android:background="@drawable/bg_read_only_field"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:minHeight="40dp"
                            android:gravity="center_vertical"
                            android:focusable="false"
                            android:clickable="false"/>
                    </LinearLayout>
                </LinearLayout>



                <!-- Row: Specialization -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_medical_services"
                        app:tint="@color/navy_blue"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Specialization"
                            android:textColor="@color/textSecondary"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/et_specialization"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Not specified"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:paddingTop="2dp"
                            android:background="@drawable/bg_read_only_field"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:minHeight="40dp"
                            android:gravity="center_vertical"
                            android:focusable="false"
                            android:clickable="false"/>
                    </LinearLayout>
                </LinearLayout>



                <!-- Row: Qualification -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_school"
                        app:tint="@color/navy_blue"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Qualification"
                            android:textColor="@color/textSecondary"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/et_qualification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Not specified"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:paddingTop="2dp"
                            android:background="@drawable/bg_read_only_field"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:minHeight="40dp"
                            android:gravity="center_vertical"
                            android:focusable="false"
                            android:clickable="false"/>
                    </LinearLayout>
                </LinearLayout>


                <!-- Row: Experience -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_work"
                        app:tint="@color/navy_blue"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Experience"
                            android:textColor="@color/textSecondary"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/et_experience_years"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Not specified"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:paddingTop="2dp"
                            android:background="@drawable/bg_read_only_field"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:minHeight="40dp"
                            android:gravity="center_vertical"
                            android:focusable="false"
                            android:clickable="false"/>
                    </LinearLayout>
                </LinearLayout>



                <!-- Row: License Number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_badge"
                        app:tint="@color/navy_blue"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="License Number"
                            android:textColor="@color/textSecondary"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/et_license_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Not available"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:paddingTop="2dp"
                            android:background="@drawable/bg_read_only_field"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:minHeight="40dp"
                            android:gravity="center_vertical"
                            android:focusable="false"
                            android:clickable="false"/>
                    </LinearLayout>
                </LinearLayout>


                <!-- Row: Hospital Affiliation -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_hospital"
                        app:tint="@color/navy_blue"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hospital Affiliation"
                            android:textColor="@color/textSecondary"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/et_hospital_affiliation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Not specified"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:paddingTop="2dp"
                            android:background="@drawable/bg_read_only_field"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:minHeight="40dp"
                            android:gravity="center_vertical"
                            android:focusable="false"
                            android:clickable="false"/>
                    </LinearLayout>
                </LinearLayout>


                <!-- Row: Availability -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_schedule"
                        app:tint="@color/navy_blue"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Availability"
                            android:textColor="@color/textSecondary"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/et_availability_schedule"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Not specified"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:paddingTop="2dp"
                            android:background="@drawable/bg_read_only_field"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:minHeight="40dp"
                            android:gravity="center_vertical"
                            android:focusable="false"
                            android:clickable="false"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Logout -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="40dp"
            android:text="Logout"
            android:textColor="@color/errorRed"
            android:textSize="16sp"
            android:letterSpacing="0.02"
            app:cornerRadius="12dp"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/errorRed"
            app:strokeWidth="1dp"
            app:icon="@drawable/ic_logout"
            app:iconTint="@color/errorRed"
            app:iconPadding="8dp"
            app:rippleColor="@color/error_red"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
    </LinearLayout>
</ScrollView>
