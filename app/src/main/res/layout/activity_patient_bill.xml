<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container_patient_bill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- TOP black scrim; height set from WindowInsets -->
    <View
        android:id="@+id/status_bar_scrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CONTENT: your original layout moved inside ScrollView -->
    <ScrollView
        android:id="@+id/bill_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@id/status_bar_scrim"
        app:layout_constraintBottom_toTopOf="@id/navigation_bar_scrim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- ======= BEGIN: your original content (unchanged IDs) ======= -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_curve"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Bill"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <!-- Info Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:radius="8dp"
                    android:elevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- Left Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Date"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_bill_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2025-05-03"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Patient Name"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_bill_patient_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kunj"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Doctor Name"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_bill_doctor_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Demo"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="10dp"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- App Logo -->
                        <ImageView
                            android:layout_width="105dp"
                            android:layout_height="105dp"
                            android:src="@drawable/app_logo"
                            android:layout_gravity="center"
                            android:layout_marginBottom="40dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Payment Details Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:radius="8dp"
                    android:elevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Payment Amount -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Payment Amount"
                                android:textSize="15sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_appointment_charge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹ 0.00"
                                android:textSize="18sp"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- Consultation Fee -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Consultation Fee"
                                android:textSize="15sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_consultation_fee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹ 0.00"
                                android:textSize="18sp"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- Deposit -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Deposit"
                                android:textSize="15sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_deposit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹ 0.00"
                                android:textSize="18sp"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- Distance (km) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Distance (km)"
                                android:textSize="15sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_distance_km_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.00 km"
                                android:textSize="18sp"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- Distance Charge -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Distance Charge"
                                android:textSize="15sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_distance_charge_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹ 0.00"
                                android:textSize="18sp"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- GST -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="GST"
                                android:textSize="15sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_gst_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹ 0.00"
                                android:textSize="18sp"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- Payment Method -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Payment Method"
                                android:textSize="15sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_payment_method"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="N/A"
                                android:textSize="18sp"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- Payment Status -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Payment Status"
                                android:textSize="15sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_payment_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending"
                                android:textSize="15sp"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- Refund Status -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Refund Status"
                                android:textSize="15sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_refund_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not Refunded"
                                android:textSize="15sp"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- Notes -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="6dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Notes"
                                android:textSize="15sp"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_notes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="15sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <!-- Divider -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="-------------------------------------------"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:gravity="center" />

                        <!-- Total Paid -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total Paid"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_total_paid_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹ 0.00"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- Doctor Earning -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Doctor Earning"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_doctor_earning"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹ 0.00"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- Admin Commission -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Admin Commission"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_admin_commission"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹ 0.00"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Download Button -->
                <Button
                    android:id="@+id/download_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/navy_blue"
                    android:text="Download"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!-- ======= END: your original content ======= -->

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM black scrim; height set from WindowInsets -->
    <View
        android:id="@+id/navigation_bar_scrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
