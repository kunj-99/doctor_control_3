<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".SettlementDetailsActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="6dp"
        app:title="Settlement Details"
        app:titleTextColor="#111827"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="#111827"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scroll Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Java expects: tvTitle -->
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Settlement"
                        android:textColor="#111827"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Java expects: tvMode -->
                    <TextView
                        android:id="@+id/tvMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Mode: -"
                        android:textColor="#6B7280"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:background="#EEF2F7" />

                    <!-- Java expects: tvAmount (single amount text based on mode) -->
                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Amount: â‚¹0.00"
                        android:textColor="#111827"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Java expects: tvQrHint -->
                    <TextView
                        android:id="@+id/tvQrHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Scan QR to pay and upload proof."
                        android:textColor="#6B7280"
                        android:textSize="13sp" />

                    <!-- Keep your chip-like status (Java can update if you want later) -->
                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="Status: Pending"
                        android:textColor="#111827"
                        android:textSize="12sp"
                        android:background="#EEF2FF" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- QR Card (Doctor -> Admin) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pay via QR"
                        android:textColor="#111827"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Scan this QR using any UPI app and complete payment."
                        android:textColor="#6B7280"
                        android:textSize="13sp" />

                    <!-- Java expects: ivQr -->
                    <ImageView
                        android:id="@+id/ivQr"
                        android:layout_width="220dp"
                        android:layout_height="220dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        android:contentDescription="QR Code"
                        android:scaleType="fitCenter"
                        android:background="#FFFFFF"
                        android:padding="10dp"
                        tools:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/tvQrLoading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="QR will load from server..."
                        android:textColor="#6B7280"
                        android:textSize="12sp"
                        android:gravity="center_horizontal" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Upload Proof Card (Doctor -> Admin) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload Payment Proof"
                        android:textColor="#111827"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvUploadHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Select the payment screenshot and submit."
                        android:textColor="#6B7280"
                        android:textSize="13sp" />

                    <!-- Java expects: btnChooseProof -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChooseProof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Select Screenshot"
                        app:cornerRadius="12dp" />

                    <TextView
                        android:id="@+id/tvSelectedFile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="No file selected"
                        android:textColor="#6B7280"
                        android:textSize="12sp" />

                    <!-- Java expects: ivSelectedProof -->
                    <ImageView
                        android:id="@+id/ivSelectedProof"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="12dp"
                        android:background="#FFFFFF"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        tools:visibility="visible"
                        tools:src="@drawable/ic_launcher_foreground"
                        android:contentDescription="Selected proof preview" />

                    <!-- Java expects: btnSubmitProof -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubmitProof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Submit Proof"
                        app:cornerRadius="12dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Doctor Proof Card (when doctor already uploaded proof, or to show his own proof) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDoctorProof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Java expects: tvDoctorTxnStatus -->
                    <TextView
                        android:id="@+id/tvDoctorTxnStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status: -"
                        android:textColor="#111827"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- Java expects: tvDoctorTxnNote -->
                    <TextView
                        android:id="@+id/tvDoctorTxnNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text=""
                        android:textColor="#6B7280"
                        android:textSize="13sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <!-- Java expects: ivDoctorProof -->
                    <ImageView
                        android:id="@+id/ivDoctorProof"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginTop="12dp"
                        android:background="#FFFFFF"
                        android:scaleType="centerCrop"
                        android:contentDescription="Doctor proof image"
                        android:visibility="gone"
                        tools:visibility="visible"
                        tools:src="@drawable/ic_launcher_foreground" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Admin Proof Card (Admin -> Doctor) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAdminProof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E7EB"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Java expects: tvAdminProofTitle -->
                    <TextView
                        android:id="@+id/tvAdminProofTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Admin Payment Proof"
                        android:textColor="#111827"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tvAdminProofHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Proof shared by admin for this payout."
                        android:textColor="#6B7280"
                        android:textSize="13sp" />

                    <!-- Java expects: ivAdminProof -->
                    <ImageView
                        android:id="@+id/ivAdminProof"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginTop="12dp"
                        android:background="#FFFFFF"
                        android:scaleType="centerCrop"
                        android:contentDescription="Admin proof image"
                        android:visibility="gone"
                        tools:visibility="visible"
                        tools:src="@drawable/ic_launcher_foreground" />

                    <TextView
                        android:id="@+id/tvAdminProofStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Proof status: --"
                        android:textColor="#6B7280"
                        android:textSize="12sp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Java expects: progressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
