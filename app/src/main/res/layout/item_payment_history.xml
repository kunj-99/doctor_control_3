<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingTop="12dp">

    <!-- Header: visible only on first item -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="6dp"
        android:visibility="gone">

        <View
            android:layout_width="6dp"
            android:layout_height="22dp"
            android:layout_marginEnd="8dp"
            android:background="#3F51B5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed Settlements"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        android:foreground="?attr/selectableItemBackground"
        android:elevation="6dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Row: status chip + created-at -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_status_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#E8F5E9"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:text="Completed"
                    android:textColor="#2E7D32"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-11-03 10:20:00"
                    android:textColor="#8A8A8A"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Notes -->
            <TextView
                android:id="@+id/tv_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Settlement period…"
                android:textColor="#6B6B6B"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:background="#EEEEEE" />

            <!-- Direction + Totals -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Left side -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Dynamic direction badge line -->
                    <TextView
                        android:id="@+id/tv_direction_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#E3F2FD"
                        android:paddingLeft="10dp"
                        android:paddingTop="4dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="4dp"
                        android:text="Admin → Doctor • ₹0.00"
                        android:textColor="#0D47A1"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_base_ex_gst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Base (ex-GST): ₹0.00"
                        android:textColor="#212121"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_gst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="GST: ₹0.00"
                        android:textColor="#212121"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Right side -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tv_admin_collected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin Collected: ₹0.00"
                        android:textColor="#424242"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_doctor_collected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Doctor Collected: ₹0.00"
                        android:textColor="#424242"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#EEEEEE" />

            <!-- Cuts / adjustments -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_admin_cut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Cut: ₹0.00"
                    android:textColor="#F57C00"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_doctor_cut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Doctor Cut: ₹0.00"
                    android:textColor="#2E7D32"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_adjustment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Adjustment: ₹0.00"
                    android:textColor="#1565C0"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#EEEEEE" />

            <!-- Given / Received -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_given_to_doctor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Given To Doctor: ₹0.00"
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_received_from_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Received From Doctor: ₹0.00"
                    android:textColor="#444444"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Footer: meta + Show proof action -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_footer_meta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Appointments: 0  |  Online: 0  |  Offline: 0"
                    android:textColor="#777777"
                    android:textSize="12sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_show_proof"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:minWidth="0dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Show proof"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    app:cornerRadius="22dp"
                    app:iconPadding="8dp"
                    app:backgroundTint="#1A73E8"
                    app:rippleColor="#331A73E8"
                    android:visibility="visible"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
