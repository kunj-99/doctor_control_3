<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="12dp"
    android:paddingTop="12dp">

    <!-- Header: visible only on first item -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="6dp"
        android:visibility="gone">

        <View
            android:layout_width="6dp"
            android:layout_height="22dp"
            android:background="#3F51B5"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed Settlements"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp"
        android:foreground="?attr/selectableItemBackground"
        android:elevation="6dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Row: Status Chip + Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_status_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:background="#E8F5E9" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2025-11-03 10:20:00"
                    android:textSize="12sp"
                    android:textColor="#8A8A8A" />
            </LinearLayout>

            <!-- Notes -->
            <TextView
                android:id="@+id/tv_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settlement period..."
                android:textSize="13sp"
                android:textColor="#6B6B6B"
                android:layout_marginTop="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp" />

            <!-- Doctor + Totals Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Left -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_doctor_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doctor ID: 1"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_base_ex_gst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Base (ex-GST): ₹0.00"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:id="@+id/tv_gst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GST: ₹0.00"
                        android:textColor="#212121"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Right -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tv_admin_collected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin Collected: ₹0.00"
                        android:textColor="#424242"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_doctor_collected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doctor Collected: ₹0.00"
                        android:textColor="#424242"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <!-- Cuts/Adjustments -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_admin_cut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Cut: ₹0.00"
                    android:textStyle="bold"
                    android:textColor="#F57C00"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_doctor_cut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Cut: ₹0.00"
                    android:textColor="#2E7D32"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tv_adjustment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adjustment: ₹0.00"
                    android:textColor="#1565C0"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <!-- Given / Received -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_given_to_doctor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Given To Doctor: ₹0.00"
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_received_from_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Received From Doctor: ₹0.00"
                    android:textColor="#444444"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- footer meta -->
            <TextView
                android:id="@+id/tv_footer_meta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointments: 0  |  Online: 0  |  Offline: 0"
                android:textColor="#777"
                android:textSize="12sp"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
