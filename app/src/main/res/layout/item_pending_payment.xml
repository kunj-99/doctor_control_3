<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardPending"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="10dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:transitionName="settlementCard"
    app:cardUseCompatPadding="true"
    app:contentPadding="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_soft"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Status chip (direction text: Admin → Doctor / Doctor → Admin) -->
            <TextView
                android:id="@+id/tvSettlementStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending (Admin → Doctor)"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1B5E20"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:background="@drawable/chip_pending_positive" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-11-03 06:30:01"
                android:textSize="12sp"
                android:textColor="#8A8A8A" />
        </LinearLayout>

        <!-- Title / Sub -->
        <TextView
            android:id="@+id/tvNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settlement from 2025-10-30 21:42:47 to 2025-11-03 12:00:01"
            android:textSize="13sp"
            android:textColor="#6B6B6B"
            android:layout_marginTop="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp" />

        <!-- Doctor + Totals Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Left column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDoctorId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor ID: 1"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvTotalEarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Base (ex-GST): ₹1500.00"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/tvTotalGst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GST: ₹150.00"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Right column -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvAdminCollected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Collected: ₹980.00"
                    android:textColor="#424242"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvDoctorCollected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Collected: ₹670.00"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <!-- Cuts Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAdminCut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Cut: ₹300.00"
                android:textStyle="bold"
                android:textColor="#F57C00"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDoctorCut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor Cut: ₹1200.00"
                android:textColor="#2E7D32"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvAdjustmentAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adjustment: -₹530.00"
                android:textColor="#1565C0"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <!-- Given/Received Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvGivenToDoctor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Given To Doctor: ₹0.00"
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvReceivedFromDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Received From Doctor: ₹0.00"
                android:textColor="#444444"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Pay Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="14dp">

            <Button
                android:id="@+id/btnPay"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="Pay Doctor ₹530.00"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingHorizontal="22dp"
                android:background="@drawable/btn_pay_primary"
                android:elevation="2dp" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
