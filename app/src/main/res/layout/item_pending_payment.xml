<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="14dp"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:radius="18dp"
    android:backgroundTint="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

            <TextView
                android:id="@+id/tvSettlementStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textColor="#FF3B30"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/status_badge"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_gravity="start"/>
            <TextView
                android:id="@+id/tvCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-05-11"
                android:textColor="#888"
                android:textSize="13sp"
                android:layout_gravity="end" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp"/>

        <!-- Main info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDoctorId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor ID: 11"
                    android:textStyle="bold"
                    android:textColor="#222"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvTotalEarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Earning: ₹1626.20"
                    android:textColor="#222"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settlement from 2025-05-06 to 2025-05-11"
                    android:textColor="#606060"
                    android:textSize="14sp"
                    android:paddingTop="3dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:paddingLeft="12dp">

                <TextView
                    android:id="@+id/tvAdminCut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Cut: ₹325.24"
                    android:textColor="#FF9800"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvDoctorCut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Cut: ₹1300.96"
                    android:textColor="#00C853"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvAdjustmentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adjustment: ₹493.24"
                    android:textColor="#2979FF"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp"/>

        <!-- Payment Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvGivenToDoctor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Given To Doctor: ₹0.00"
                android:textColor="#444"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvReceivedFromDoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Received From Doctor: ₹493.24"
                android:textColor="#444"
                android:textSize="15sp"/>
        </LinearLayout>

        <!-- Pay Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnPay"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Pay ₹493.24"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:backgroundTint="#FF3B30"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:layout_gravity="end"
                android:elevation="2dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
