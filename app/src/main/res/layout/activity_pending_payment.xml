<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <!-- Header -->
    <FrameLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:elevation="7dp"
        android:background="@drawable/bg_header_gradient">

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="85dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:scaleType="centerInside"
                app:tint="#FFFFFF"
                android:layout_marginEnd="10dp"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending Doctor Payments"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:letterSpacing="0.03"
                    android:fontFamily="sans-serif-medium"
                    android:shadowColor="#25000000"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="4"/>

                <TextView
                    android:id="@+id/tvHeaderSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settle dues instantly and manage payouts."
                    android:textSize="14sp"
                    android:textColor="#D0F5FC"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPaymentSummary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutHeader"
        android:padding="8dp" />

    <!-- Black system-bar scrims (TOP & BOTTOM) -->
    <View
        android:id="@+id/system_top_scrim"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:elevation="20dp" />

    <View
        android:id="@+id/system_bottom_scrim"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:elevation="20dp" />

</RelativeLayout>
